		//사원의 실적이 100만원 이상이면 최우수, 50만원 이상이면 우수, 30만원 미만이면 보통 출력
	
		int sale = 25;
		System.out.println("판매 실적은"+ sale +"만원 입니다.");
		if (sale>=100) {
			System.out.println("최우수 사원입니다.");
		} else if (sale>=50) {
			System.out.println("우수 사원입니다.");
		} else if (sale<30) {
			System.out.println("보통사원입니다.");
		}
		
		
	}
}
