package ex02;

//계산기 클래스
public class Calculator {
	//필드
	int x;
	int y;
	
	
	//생성자-일반 생성자도 사용할거면 기본과 일반 다 정의해야함 생성자의 이름은 클래스 이름과 동일하게 하면됨
	//기본생성자(객체를 생성하는 생성자)
	Calculator() {
		
	}
	
	//일반 생성자
	Calculator(int x, int y) {
		this.x=x;
		this.y=y;
	}
	
	//메서드(동작)
	int plus(int x,int y) {
		int result= x + y;
		return result;
	}
}
