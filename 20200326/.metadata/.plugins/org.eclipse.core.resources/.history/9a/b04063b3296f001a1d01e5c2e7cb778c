package ex04;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		Scanner s= new Scanner(System.in);
		
		boolean run=true;
		
		String[] account=new String[100]; // 썯촥좾탺
		String[] name=new String[100];	// 썯촥촸
		int[] money=new int[100];	// 첖쮕
		int count=0;
		
		
		
		
		while(run) {
			
		System.out.println("------------------------------------------------");
		System.out.println(" 1. 썯촥쨬 | 2. 썯촥점 | 3. 찣쐏 | 4. 歐 | 5. 쭹 ");
		System.out.println("------------------------------------------------");
		System.out.print("쨤콲> ");

		int menu=s.nextInt();
		
		switch(menu) {
		
			case 1: //썯촥 쨬
				System.out.println("---------------------------------------------");
				System.out.println("썯촥쨬");
				System.out.println("---------------------------------------------");
				System.out.print("썯촥좾탺> ");
				account[count]=s.next();
				System.out.print("썯촥촸> ");
				name[count]=s.next();
				System.out.print("퉘 첎쐏쮕> ");
				s.nextLine();
				money[count]=s.nextInt();
				count=count+1;
				System.out.print("써쎀 : 썯촥쌰 쨬왆쮴챲핎.");
				break;
			case 2: // 썯촥점
				System.out.println("-------------------------------------------");
				System.out.println("썯촥점");
				System.out.println("-------------------------------------------");
				for(int i=0; i<count; i++ ) {
					System.out.println("썯촥점픂t" + account[i] +"\t"+ name[i]+ "\t"+money[i]);
				}
				break;
			case 3: // 찣쐏
				
				break;
			case 4: // 歐
				
				break;
			case 5: // 쭹
				run=false;
				System.out.println("총풤인 쭹");
				break;
			default :
				System.out.println("젖왇 Т첎얦얯.");
				
		}
		
		}
	}

}
