package 숙제;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		Scanner s= new Scanner(System.in);
		
		boolean run=true;
		
		String[] name=new String[100];
		int[] kor=new int[100];
		int[] eng=new int[100];
		int[] mat=new int[100];
