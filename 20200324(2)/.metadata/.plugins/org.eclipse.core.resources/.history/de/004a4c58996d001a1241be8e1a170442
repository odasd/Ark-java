package ex06;

public class Sample {

	public static void main(String[] args) {
		//for1();
		//for2();
		for3();

	}
	//0~100까지 짝수의 총 합
	
	public static void for3() {
		System.out.println("짝수의 총합");
		int tot=0;
		for(int i=0; i<=100; i+=2) {
		}
		System.out.println("1~100까지 짝수의 합 "+ tot);
	}
	
	
	
	//1~100까지 홀수의 핪
	public static void for4() {
		
	}
	
	
	
	//1~100까지 합을 출력
	public static void for2() {
		System.out.println("예제2");
		int tot=0;
		for(int i=1; i<=100; i++) {
			tot=tot+i;
		}
		System.out.println("1~100까지의 합계 : " + tot);
	}
	
	
	
	// for 반복문
	// 5까지 반복출력
	public static void for1() {
		System.out.println("예제1");
		for(int i=1; i<=50; i+=2) { //i=i+2 도 같은 결과 출력 i값에 2씩 증가
		System.out.println(i);
		}
	}
}
