			int menu=s.nextInt();
			
			switch(menu) {
			
			case 1:
				System.out.println("------------------------------------------");
				System.out.println("성적입력");
				System.out.println("------------------------------------------");
				System.out.println("번호> ");
				name[count]=s.next();
				System.out.println("성명> ");
				
				break;
			case 2:
				
				break;
			case 3:
				
				break;
			case 4:
				
				break;
			default:
				System.out.println("잘못된 메뉴입니다.");
			}
			
		}
				
				
				
		

	}

}
