package ex02;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		
		Scanner s=new Scanner(System.in);
		
		int[] score=null;
		
		boolean run=true;
		
		while(run) {
			
			System.out.println("-----------------------------------------------------");
			System.out.println("| 1. 학생수 | 2. 점수입력 | 3. 점수리스트 | 4. 분석 | 5. 종료 |");
			System.out.println("-----------------------------------------------------");
			System.out.println("선택> ");
			
			int menu=s.nextInt();
			
			switch(menu) {
			
			case 1:
				System.out.print("학생수> ");
				int count=s.nextInt();
				score=new int[count];
				break;
			case 2:
				
				break;
			case 3:
				
				break;
			case 4:
				
				break;
			case 5:
				
				run=false;
				System.out.println("프로그램 종료");
			}
			
		}
	}

}
